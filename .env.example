# Sepolia testnet RPC URL (get from Infura, Alchemy, etc.)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Private key of the deployer account (without 0x prefix)
# NEVER commit this to version control!
PRIVATE_KEY=your_private_key_here

# Platform wallet address to receive platform fees
PLATFORM_WALLET=0xYourPlatformWallet

# Backend signer address for DPVR order submission (granted BACKEND_ROLE)
BACKEND_ADDRESS=0xYourBackendSigner

# Optional: External stablecoin address (e.g., KRWT). If empty, MockKRWT will be deployed.
STABLECOIN_ADDRESS=
